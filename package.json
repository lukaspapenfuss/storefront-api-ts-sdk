{
  "name": "@scayle/storefront-api-sdk",
  "version": "0.1.1",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "axios": "^1.4.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/nock": "^9.3.0",
    "esbuild": "^0.18.11",
    "jest": "^29.5.0",
    "nock": "10.0.6",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scayle/storefront-api-ts-sdk.git"
  },
  "license": "MIT",
  "scripts": {
    "prepublish": "yarn test && yarn build",
    "build": "rm -rf dist/ && yarn build:ts && yarn build:types",
    "build:ts": "esbuild --bundle src/index.ts --outdir=dist --sourcemap --packages=external --format=esm --target=esnext",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "format": "prettier -w \"src/**/*.ts\"",
    "lint": "prettier -l \"src/**/*.ts\" && tsc --noEmit",
    "test": "yarn lint && yarn jest"
  }
}
