{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "esnext",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "types": [
      "jest"
    ],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "pretty": true,
    "target": "es5",
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noEmitOnError": true,
    "declaration": true,
    "baseUrl": "./src",
    "paths": {
      "bapi/*": [
        "./*"
      ]
    },
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "noErrorTruncation": true,
    "outDir": "./compiled",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "compiled/**"
  ]
}
