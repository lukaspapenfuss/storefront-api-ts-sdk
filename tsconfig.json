{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": [ "node", "vitest/globals"],
    "lib": ["ES2022", "dom", "dom.iterable", "scripthost"],
    "module": "commonjs",
    "target": "es2018",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "noEmit": true,
    "strict": true
  },
  "include": ["src/**/*.ts", "@types/*.d.ts"],
  "exclude": [ "dist", "node_modules", "src/**/*.test.ts", "dist", "./*.d.ts"]
}
